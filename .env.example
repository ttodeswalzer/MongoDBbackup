# Bu dosyayı .env olarak kopyalayın ve kendi değerlerinizle doldurun

# API Yapılandırması
API_BASE_URL=
LOGIN_ENDPOINT=/users/login

# MongoDB Bağlantı Ayarları
MONGODB_DEFAULT_HOST=localhost
MONGODB_DEFAULT_PORT=27017
MONGODB_CONNECTION_TIMEOUT=10000

# SSH Tünel Ayarları
SSH_LOCAL_BIND_ADDRESS=
SSH_DEFAULT_PORT=22
SSH_CONNECTION_TIMEOUT=30

# Dosya Yolları
CONFIG_FILE_NAME=damise_config.json
CREDENTIALS_FILE_NAME=damise_credentials.json
TOKEN_FILE_NAME=damise_token.json
BACKUP_DIR_NAME=damise_backups

# Güvenlik Ayarları
ENCRYPTION_KEY_SUFFIX=.key
SESSION_TIMEOUT=3600

# Loglama Ayarları
LOG_FILE_PREFIX_AUTH=damise_auth_log_
LOG_FILE_PREFIX_BACKUP=mongo_backup_log_
LOG_FILE_EXTENSION=.txt

# Uygulama Ayarları
APP_TITLE=Damise Admin Panel - Güvenli Giriş Sistemi
APP_VERSION=2.0
BACKUP_APP_TITLE=Damise MongoDB Yedekleme Aracı
WINDOW_DEFAULT_WIDTH=800
WINDOW_DEFAULT_HEIGHT=700
BACKUP_WINDOW_WIDTH=1000
BACKUP_WINDOW_HEIGHT=900
